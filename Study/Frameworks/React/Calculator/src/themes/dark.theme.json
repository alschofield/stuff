{
  "home": {
    "container": {
      "display": "flex",
      "height": "calc(100vh - 115px)",
      "paddingTop": "40px",
      "paddingLeft": "15px",
      "paddingRight": "15px",
      "paddingBottom": "15px",
      "backgroundColor": "#555555",
      "justifyContent": "center",
      "alignItems": "center"
    },
    "calculator": {
      "container": {
        "display": "block",
        "height": "500px",
        "width": "400px",
        "backgroundColor": "#333333",
        "borderRadius": "5px",
        "paddingTop": "5px",
        "paddingRight": "5px",
        "paddingLeft": "5px",
        "paddingBottom": "5px"
      },
      "input": {
        "width": "calc(100% - 10px)",
        "height": "50px",
        "backgroundColor": "#FFFFFF",
        "textAlign": "right",
        "fontSize": "35px",
        "paddingRight": "10px",
        "paddingLeft": "0px",
        "border": "none"
      },
      "body": {
        "display": "flex",
        "height": "calc(100% - 50px)",
        "width": "100%"
      },
      "numpad": {
        "container": {
          "display": "flex",
          "flexWrap": "wrap",
          "height": "100%",
          "width": "75%"
        },
        "button": {
          "height": "25%",
          "width": "33%",
          "color": "#FFFFFF",
          "fontSize": "24px",
          "cursor": "pointer",
          "border": "none",
          "backgroundColor": "#333333"
        }
      },
      "operators": {
        "container": {
          "display": "flex",
          "flexWrap": "wrap",
          "height": "100%",
          "width": "25%"
        },
        "button": {
          "width": "100%",
          "height": "20%",
          "color": "#FFFFFF",
          "fontSize": "24px",
          "cursor": "pointer",
          "border": "none",
          "backgroundColor": "#333333"
        }
      }
    }
  }
}
